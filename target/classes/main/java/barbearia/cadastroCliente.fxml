<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.barbearia.controllers.HomeController">
     <children>
   
      <VBox prefHeight="300" prefWidth="640" spacing="10.0" alignment="TOP_LEFT">
         <TableView fx:id="tbView">
            <columns >
              <TableColumn text="Id" fx:id="tbcClienteID" />
               <TableColumn text="Nome" fx:id="tbcNome"/>
               <TableColumn text="Email" fx:id="tbcEmail"/>
               <TableColumn text="WhatsApp" fx:id="tbcWhatsApp"/>
               <TableColumn text="Tipo Corte" fx:id="tbcTipoCorte"/>
               <TableColumn text="Data/Hora" fx:id="tbcDataHora"/>
            </columns>
         </TableView>
      </VBox>

      <center>
         <StackPane>
            <Button text="Adicionar" onAction="#loadCadastro" />
            
         </StackPane>
      </center>
      
    </children>
</FlowPane>